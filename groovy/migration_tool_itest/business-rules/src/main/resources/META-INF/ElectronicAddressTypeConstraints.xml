<constraint-mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.org/xml/ns/javax/validation/mapping validation-mapping-1.0.xsd"
	xmlns="http://jboss.org/xml/ns/javax/validation/mapping">
	<default-package>com.aexp.gcs.schema.sendcorr</default-package>
	
	 <bean class="ElectronicAddressType" ignore-annotations="false">
		<field name="emailID">
			<constraint annotation="org.hibernate.validator.constraints.Email">
				<message>Invalid Email Address</message>
				<groups>
					<value>com.aexp.gcs.poa.validate.template.AGNEUALE0001001</value>
					<value>com.aexp.gcs.poa.validate.template.AGNEUALE0002003</value>
					<value>com.aexp.gcs.poa.validate.template.GENEUAMR0004001</value>
				</groups>
			</constraint>
		</field>
	</bean>
</constraint-mappings>